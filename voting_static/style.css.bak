/* Admin Header */
.admin-title {
    font-size: 1.5em;
    color: white;
}

/* Navbar Styling */
.admin-navbar {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #333;
    padding: 15px 30px;
    color: white;
    height: 15%;
}

.navbar-content {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.profile {
    display: flex;
    align-items: center;
}

.profile img {
    border-radius: 50%;
    width: 40px;
    height: 40px;
    margin-right: 10px;
}

.admin-name {
    font-size: 1.2em;
    font-weight: bold;
}

/* Section Container */
.sections-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px; /* Spacing between sections */
    padding: 20px; /* Spacing around sections and the page */
    height: 85%;
    width: 100%;
    box-sizing: border-box;
}

.section-link {
    text-decoration: none; /* Removes underline */
    color: white; /* Sets text color */
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 1.5em;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, background 0.3s ease;
    cursor: pointer; /* Indicates clickability */
    padding: 20px;
    height: 100%;
}

.section-1 {
    background: linear-gradient(145deg, #00aaff, #0066cc); /* Glossy blue */
}

.section-2 {
    background: linear-gradient(145deg, #00ff88, #009944); /* Glossy green */
}

.section-link:hover {
    transform: scale(1.05);
    background: linear-gradient(145deg, #007acc, #005bb5); /* Slight color change on hover */
}

/* Responsive Design for Mobile */
@media (max-width: 768px) {
    .admin-navbar {
        flex-direction: column;
        align-items: flex-start;
        height: auto;
        padding: 10px 20px;
    }

    .navbar-content {
        flex-direction: column;
        align-items: flex-start;
    }

    .sections-container {
        grid-template-columns: 1fr;
        height: auto;
    }

    .section-link {
        font-size: 1.2em;
    }

    /* Remove hover scaling effect on mobile */
    .section-link:hover {
        transform: none;
    }
}


