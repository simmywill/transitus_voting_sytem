}

.session-title {
    font-size: 18px;
    font-weight: bold;
    color: #333;
    text-decoration: none;
}

.session-title:hover {
    color: #007bff;
}

/* Session links container */
.session-links {
    display: flex;
    gap: 10px;
    align-items: center;
}

