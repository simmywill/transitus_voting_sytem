.view-session-candidate__avatar {
    position: relative;
    width: 96px;
    height: 96px;
    margin: 0 auto 1rem;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--segment-color, #ef4444), var(--segment-light-color, #f97316));
    box-shadow: 0 18px 35px rgba(15, 23, 42, 0.35);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    z-index: 1;
}

.view-session-candidate__avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.view-session-candidate__avatar-placeholder {
    font-size: 2.25rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.88);
    text-transform: uppercase;
}

.view-session-candidate__name {
    position: relative;
    z-index: 1;
    width: 100%;
    margin: 0 auto 0.45rem;
    padding: 0.4rem 0.35rem;
    border: none;
    border-radius: 12px;
    background: transparent;
    font-size: 1.05rem;
    font-weight: 600;
    color: #0f172a;
    text-align: center;
    transition: background 0.2s ease, box-shadow 0.2s ease;
}

.view-session-candidate__name:focus {
    outline: none;
    background: rgba(148, 163, 184, 0.2);
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.28);
}

.view-session-candidate__name::placeholder {
    color: rgba(15, 23, 42, 0.38);
}

.view-session-candidate__role {
    position: relative;
    z-index: 1;
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: rgba(15, 23, 42, 0.55);
}

.view-session-candidate--just-added {
    animation: view-session-candidate-pop 0.6s ease;
}

@keyframes view-session-candidate-pop {
    0% {
        transform: scale(0.85);
        opacity: 0;
    }
    60% {
        transform: scale(1.05);
        opacity: 1;
    }
    100% {
        transform: scale(1);
        opacity: 1;
    }
}

.view-session-add-candidate {
    position: relative;
    z-index: 1;
    border-radius: 24px;
    border: 1px dashed rgba(255, 255, 255, 0.45);
    background: rgba(255, 255, 255, 0.18);
    color: #f8fafc;
    min-height: 210px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.25s ease, background 0.25s ease, box-shadow 0.25s ease;
    backdrop-filter: blur(12px);
}

.view-session-add-candidate:hover {
    transform: translateY(-4px);
    background: rgba(255, 255, 255, 0.3);
    box-shadow: 0 22px 45px rgba(15, 23, 42, 0.28);
}

.view-session-add-candidate__icon {
    font-size: 2.75rem;
    line-height: 1;
}

.view-session-add-candidate:disabled {
    opacity: 0.6;
    cursor: wait;
}

body.view-session-body .save_button-container {
    padding-top: 3rem;
    text-align: center;
}

body.view-session-body .save_voting_session {
    border-radius: 999px;
    padding: 0.85rem 2.9rem;
    font-size: 1.05rem;
    letter-spacing: 0.04em;
    box-shadow: 0 24px 45px rgba(37, 99, 235, 0.35);
}

@media (max-width: 1024px) {
    body.view-session-body .view-session-wrapper {
        padding: 2rem 1.2rem 3.5rem;
    }
}

@media (max-width: 768px) {
    body.view-session-body #sortable-segments.view-session-grid {
        grid-template-columns: 1fr;
    }

    .view-session-card__header {
        flex-direction: column;
        align-items: flex-start;
        padding: 1.3rem 1.4rem;
    }

    .view-session-card__title {
        font-size: 1.4rem;
    }

    .view-session-card__menu {
        right: 1rem;
    }

    .view-session-card__body {
        padding: 1.4rem 1.4rem 1.9rem;
    }

    .view-session-candidate-grid {
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    }
}

@media (max-width: 520px) {
    body.view-session-body .view-session-wrapper {
        padding: 1.6rem 1rem 3rem;
    }

    .view-session-candidate {
        padding: 1.3rem 1rem 1.5rem;
    }

    .view-session-candidate__avatar {
        width: 82px;
        height: 82px;
    }

    .view-session-add-candidate {
        min-height: 180px;
    }
}
.view-session-card {
    cursor: grab;
}

.view-session-card.sortable-chosen {
    cursor: grabbing;
    opacity: 0.95;
    box-shadow: 0 40px 80px rgba(15, 23, 42, 0.55);
}

.view-session-card.sortable-ghost {
    opacity: 0.5;
}

.view-session-segment__name-input {
  font: inherit;
  border: 1px solid rgba(0,0,0,.08);
  border-radius: 6px;
  padding: .35rem .5rem;
  background: #fff;
  outline: none;
}
.view-session-segment__name-input:focus {
  box-shadow: 0 0 0 3px rgba(14,165,233,.15);
  border-color: var(--segment-color, #0ea5e9);
}
